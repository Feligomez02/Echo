{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "installCommand": "npm ci --legacy-peer-deps && npm run prisma:generate",
  "env": {
    "DATABASE_URL": "file:./dev.db"
  },
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "0 2 * * 0"
    }
  ],
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
