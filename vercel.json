{
  "buildCommand": "prisma generate && next build --no-turbopack",
  "framework": "nextjs",
  "installCommand": "npm ci --legacy-peer-deps",
  "functions": {
    "app/api/**/*.js": {
      "includeFiles": "node_modules/@prisma/client/**"
    },
    "app/api/**/*.ts": {
      "includeFiles": "node_modules/@prisma/client/**"
    }
  },
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "0 2 * * 0"
    }
  ]
}
