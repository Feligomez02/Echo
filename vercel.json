{
  "buildCommand": "prisma generate && next build",
  "framework": "nextjs",
  "installCommand": "npm ci --legacy-peer-deps",
  "functions": {
    "app/api/**/*": {
      "includeFiles": "node_modules/.prisma/client/**"
    }
  },
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "0 2 * * 0"
    }
  ]
}
